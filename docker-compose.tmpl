version: '3.9'
services:
  backend:
    image: $IMAGE_NAME
    container_name: backend
    expose:
     - "80"
    network:
     - backend-network
  nginx:
      image: nginx
      container_name: nginx_container
      ports:
        - "443:443"
      volumes:
        - ./nginx.conf:/etc/nginx/nginx.conf.d/default.conf
      depends_on:
        - backend
      networks:
        - backend-network
networks:
 backend-network:
